<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RickAndMorty.Text.HeadlineSmall" parent="@style/TextAppearance.Material3.HeadlineSmall">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">5sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="RickAndMorty.Text.BodyMedium" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="maxLines">2</item>
        <item name="android:breakStrategy">balanced</item>
        <item name="android:maxEms">4</item>
    </style>

    <style name="RickAndMorty.Text.BodySmall.Italic" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RickAndMorty.Text.BodyMedium.AlignStart">
        <item name="android:gravity">left|center_vertical</item>
    </style>
</resources>